<!doctype html>
<html lang="en">
<head>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<title>LICENSE GỐC™ — Apps Hub</title>
<meta name="description" content="Protect the Roots. Empower Humanity. LICENSE GỐC™ — Apps Hub." />
<style>
  :root{
    --bg:#0a0b0f; --panel:#111; --text:#eae7dc;
    --muted:#b7b3a3; --gold:#f5d36a; --gold-soft:#e5c86b;
    --line:rgba(245,211,106,.25); --radius:16px; --blur:12px;
  }
  *{box-sizing:border-box}
  body{
    margin:0; font-family: system-ui, -apple-system, Segoe UI, Roboto, Inter, Arial, sans-serif;
    background: var(--bg); color: var(--text); line-height:1.55; padding-top: 140px;
  }
  a{ color: var(--gold); text-decoration: none; }
  h1,h2{ margin:0 0 .5rem 0 }
  .container{ width:min(1200px, 92vw); margin: 0 auto; }

  /* ===== Sticky Logo Crown (Hero top) ===== */
  .lg-sticky-logo{
    position: fixed; top:0; left:50%; transform: translateX(-50%);
    z-index: 9999; text-align:center; width:min(92vw, 560px);
    padding: 10px 8px 0;
    background: linear-gradient(180deg, rgba(10,11,15,.85), rgba(10,11,15,0));
    -webkit-backdrop-filter: blur(var(--blur)); backdrop-filter: blur(var(--blur));
    border-bottom:1px solid var(--line);
    border-radius: 0 0 var(--radius) var(--radius);
  }
  .lg-sticky-logo img{
    display:block; margin:0 auto; height:110px; width:auto; object-fit:contain;
    filter: drop-shadow(0 6px 14px rgba(0,0,0,.45));
  }
  .lg-sticky-logo .fallback{
    color: var(--gold); font-weight: 800; letter-spacing:.35px; padding: 8px 0 4px;
  }

  /* ===== Section title ===== */
  .section{ padding: 36px 0; }
  .section h2{ font-size: 28px; letter-spacing:.3px }
  .muted{ color: var(--muted); }

  /* ===== Apps grid ===== */
  #apps .grid{
    display:grid; gap:18px;
    grid-template-columns: repeat( auto-fit, minmax(240px,1fr) );
    margin-top: 18px;
  }
  .app-card{
    padding: 22px 22px;
    background: linear-gradient(180deg, #121317, #0f1014);
    border:1px solid var(--line);
    border-radius: var(--radius);
    box-shadow: 0 10px 28px rgba(0,0,0,.35), inset 0 0 0 1px rgba(255,255,255,.02);
    transition: transform .08s ease, filter .15s ease, box-shadow .2s ease;
  }
  .app-card:hover{ transform: translateY(-2px); filter: brightness(1.02); }
  .app-card h3{ margin:0 0 .35rem 0; font-size:18px; letter-spacing:.2px }
  .app-card p{ margin:0; color:var(--muted); font-size:14px }

  /* ===== Floating App Bar ===== */
  .lg-appbar{
    position: fixed; left:50%; bottom:18px; transform: translateX(-50%);
    z-index: 9998; display:flex; flex-wrap:wrap; gap:12px;
    padding:14px; background: rgba(17,17,17,.6);
    -webkit-backdrop-filter: blur(var(--blur)); backdrop-filter: blur(var(--blur));
    border:1px solid var(--line); border-radius: calc(var(--radius) + 4px);
    box-shadow: 0 10px 30px rgba(0,0,0,.35), inset 0 0 0 1px rgba(255,255,255,.03);
    max-width:min(980px,94vw);
  }
  .lg-chip{
    display:inline-flex; align-items:center; justify-content:center;
    padding:10px 16px; border-radius:999px; white-space:nowrap;
    color:#111; background: linear-gradient(180deg, var(--gold), var(--gold-soft));
    font-weight:800; font-size:15px; letter-spacing:.2px; text-decoration:none;
    border:1px solid rgba(255,255,255,.15);
    box-shadow:0 6px 16px rgba(245,211,106,.25);
    transition: transform .08s ease, box-shadow .2s ease, filter .15s ease;
  }
  .lg-chip:hover{ transform:translateY(-1px); filter:brightness(1.02); }
  .lg-chip:active{ transform:translateY(0); filter:brightness(.98); }
  .lg-chip--ghost{
    background: transparent; color: var(--gold);
    border:1px solid var(--gold-soft);
    box-shadow: inset 0 0 0 1px rgba(245,211,106,.18);
  }
  .lg-heart{ margin-left:.35rem; }

  /* ===== Floating AI Tim button ===== */
  .ai-fab{
    position: fixed; right: 18px; bottom: 92px; z-index: 9999;
  }
  .ai-fab button{
    height:60px; width:60px; border-radius:50%;
    background: linear-gradient(180deg,#ff6b6b,#ff3b3b);
    border:1px solid rgba(255,255,255,.25); color:white; font-size:22px;
    box-shadow: 0 12px 28px rgba(255,59,59,.35);
  }
  .ai-panel{
    position: fixed; right: 18px; bottom: 162px; z-index: 10000;
    width: min(480px, 92vw);
    background: #0f1014; border:1px solid var(--line);
    border-radius: var(--radius); padding:14px; display:none;
    box-shadow:0 16px 36px rgba(0,0,0,.5);
  }
  .ai-panel header{ display:flex; justify-content:space-between; align-items:center; margin-bottom:8px }
  .ai-panel header h3{ margin:0; font-size:16px; letter-spacing:.2px }
  .ai-panel textarea{
    width:100%; height:120px; background:#0b0c10; color:var(--text);
    border:1px solid rgba(255,255,255,.08); border-radius:12px; padding:12px; resize:vertical;
  }
  .ai-panel .row{ display:flex; gap:10px; margin-top:8px }
  .ai-panel .row select, .ai-panel .row button{
    border-radius:10px; border:1px solid rgba(255,255,255,.12);
    background:#121317; color:var(--text); padding:10px 12px;
  }

  footer{ text-align:center; color:var(--muted); padding:40px 0 120px }
  @media (max-width:420px){
    body{ padding-top:128px }
    .lg-sticky-logo img{ height:100px }
    .lg-chip{ padding:9px 14px; font-size:14px }
  }
</style>
</head>
