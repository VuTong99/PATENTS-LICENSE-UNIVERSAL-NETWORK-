<!-- ===== Floating AI Tim (mini panel demo) ===== -->
<div class="ai-fab">
  <button id="aiBtn" title="Ask AI Tim">❤️</button>
</div>
<div class="ai-panel" id="aiPanel" aria-hidden="true">
  <header>
    <h3>AI Tim — Quick Ask</h3>
    <button id="aiClose" aria-label="Close">✕</button>
  </header>
  <textarea id="aiInput" placeholder="Nhập câu hỏi hoặc yêu cầu sáng tạo…"></textarea>
  <div class="row">
    <select id="aiLang">
      <option value="vi">Tiếng Việt</option>
      <option value="en">English</option>
      <option value="ja">日本語</option>
      <option value="ko">한국어</option>
      <option value="zh">中文</option>
    </select>
    <button id="aiSend">Send</button>
  </div>
  <div id="aiOut" class="muted" style="margin-top:8px;font-size:14px"></div>
</div>

<footer class="container">
  © 2025 LICENSE GỐC™ — The Root. Eternal. Universal.
</footer>

<script>
  // Cuộn mềm tới #apps khi bấm "Apps"
  document.querySelectorAll('a[href="#apps"]').forEach(a=>{
    a.addEventListener('click', e=>{
      e.preventDefault();
      document.getElementById('apps').scrollIntoView({behavior:'smooth', block:'start'});
    });
  });

  // Mini AI Tim panel (demo không gọi API)
  const aiBtn = document.getElementById('aiBtn');
  const aiPanel = document.getElementById('aiPanel');
  const aiClose = document.getElementById('aiClose');
  const aiSend = document.getElementById('aiSend');
  const aiInput = document.getElementById('aiInput');
  const aiOut = document.getElementById('aiOut');
  const aiLang = document.getElementById('aiLang');

  function openAI(){ aiPanel.style.display='block'; aiPanel.setAttribute('aria-hidden','false'); aiInput.focus(); }
  function closeAI(){ aiPanel.style.display='none'; aiPanel.setAttribute('aria-hidden','true'); }
  aiBtn.addEventListener('click', openAI);
  aiClose.addEventListener('click', closeAI);

  aiSend.addEventListener('click', ()=>{
    const txt = aiInput.value.trim();
    if(!txt){ aiOut.textContent='Hãy nhập nội dung trước nhé.'; return; }
    // demo: phản hồi giả lập theo ngôn ngữ chọn
    const lang = aiLang.value;
    const pre = (lang==='vi') ? 'Tim (demo):' :
                (lang==='ja') ? 'Tim (デモ):' :
                (lang==='ko') ? 'Tim (데모):' :
                (lang==='zh') ? 'Tim（演示）:' : 'Tim (demo):';
    aiOut.textContent = `${pre} Cảm ơn! Tim đã nhận: “${txt}”. Bản đầy đủ sẽ kết nối AI thật.`;
    aiInput.value='';
  });
</script>
